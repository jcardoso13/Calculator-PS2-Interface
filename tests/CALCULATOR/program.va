Waiting	    ldi 0
            ldi 0
		    wrw R1
		    wrw R2
		    wrw R3
		    wrw R4
		    wrw R5
		    wrw R6
		    wrw R7
		    wrw R8
		    wrw R9
		    wrw R10
		    wrw R11
		    wrw R12
		    wrw R13
		    wrw R14
		    wrw R15
		    rdw PS2_BASE
		    nop
		    nop
		    wrw DISPLAY_BASE
		    nop
		    nop
		    beqi Waiting
		    nop
		    nop
Load 	    wrw R3
            wrw R3
		    wrw DISPLAY_BASE
		    ldi R4
		    addi 1
        

#finish program by jumping back to boot ROM
	ldi 0
	beqi PROG_ROM
	nop
	
